<div class="stats-tab-body">
  <div class="stats-column stats-column-1">
    <div class="stats-area">
      <div class="title-line">
        {{localize "WW.Actor.Stats.attributes"}}
      </div>
      <div class="stats-area-main stats-attributes">
        <div class="attributes-item">
          <div class="attribute-name">{{localize "WW.Actor.Stats.agility"}}</div>
          <input class="edit-mode-only" name="system.agility" type="text" value="{{numberFormat system.agility sign=true}}" data-dtype="Number" />
          <a class="normal-mode-only rollable" data-roll-type="risk" data-attribute="agility">
            {{numberFormat system.agility sign=true}}
          </a>
        </div>
        <div class="attributes-item">
          <div class="attribute-name">{{localize "WW.Actor.Stats.focus"}}</div>
          <input class="edit-mode-only" name="system.focus" type="text" value="{{numberFormat system.focus sign=true}}" data-dtype="Number" />
          <a class="normal-mode-only rollable"  data-roll-type="risk" data-attribute="focus">
            {{numberFormat system.focus sign=true}}
          </a>
        </div>
        <div class="attributes-item">
          <div class="attribute-name">{{localize "WW.Actor.Stats.strength"}}</div>
          <input class="edit-mode-only" name="system.strength" type="text" value="{{numberFormat system.strength sign=true}}" data-dtype="Number" />
          <a class="normal-mode-only rollable"  data-roll-type="risk" data-attribute="strength">
            {{numberFormat system.strength sign=true}}
          </a>
        </div>
        <div class="attributes-item">
          <div class="attribute-name">{{localize "WW.Actor.Stats.evasion"}}</div>
          <div class="defense-stat">
            <input name="system.evasion" type="text" value="{{system.evasion}}" data-dtype="Number" disabled="disabled" />
          </div>
        </div>
        <div class="attributes-item">
          <div class="attribute-name">{{localize "WW.Actor.Stats.resolve"}}</div>
          <div class="defense-stat">
            <input name="system.resolve" type="text" value="{{system.resolve}}" data-dtype="Number" disabled="disabled" />
          </div>
        </div>
        <div class="attributes-item">
          <div class="attribute-name">{{localize "WW.Actor.Stats.tenacity"}}</div>
          <div class="defense-stat">
            <input name="system.tenacity" type="text" value="{{system.tenacity}}" data-dtype="Number" disabled="disabled" />
          </div>
        </div>
      </div>
    </div>
    <div class="stats-area">
      <div class="title-line">
        {{localize "WW.Actor.Stats.skills"}}
      </div>
      <div class="stats-area-main feature-list">
        {{#each skills as |skill id|}}
{{> "systems/wyrdwood-wand/templates/actor/parts/actor-feature.hbs" skill}}
        {{/each}}
      </div>
      <a class="edit-mode-only add-item" data-type="skill" data-new-text="TYPES.Item.newSkill">
        <i class="fas fa-plus"></i>
        <div>{{localize "TYPES.Item.addSkill"}}</div>
      </a>
    </div>
  </div>
  <div class="stats-column stats-column-2">
    <div class="stats-area">
      <div class="title-line">
        {{localize "WW.Actor.Stats.paths"}}
      </div>
      <div class="stats-area-main feature-list">
        {{#each paths as |path id|}}
{{> "systems/wyrdwood-wand/templates/actor/parts/actor-feature.hbs" path}}
        {{/each}}
      </div>
      <a class="edit-mode-only add-item" data-type="path" data-new-text="TYPES.Item.newPath">
        <i class="fas fa-plus"></i>
        <div>{{localize "TYPES.Item.addPath"}}</div>
      </a>
    </div>
    <div class="stats-area">
      <div class="title-line">
        {{localize "WW.Actor.Stats.talents"}}
      </div>
      <div class="stats-area-main feature-list">
        {{#each talents as |talent id|}}
{{> "systems/wyrdwood-wand/templates/actor/parts/actor-feature.hbs" talent}}
        {{/each}}
      </div>
      <a class="edit-mode-only add-item" data-type="talent" data-new-text="TYPES.Item.newTalent">
        <i class="fas fa-plus"></i>
        <div>{{localize "TYPES.Item.addTalent"}}</div>
      </a>
    </div>
  </div>
</div>